<project name="pipes-tinkerforge-package" default="build-module" basedir="./">

    <property version="1.0.0" />
	<property name="package.jar" value="pipes-tinkerforge-${version}.jar"/>

	<target name="build-module">
		<jar jarfile="${package.jar}" manifest="META-INF/MANIFEST.MF">
			<fileset dir="bin">
				<include name="org/ws4d/pipes/modules/tinkerforge/**/*" />
			</fileset>
			<fileset dir=".">
				<include name="webroot/**/*" />
			</fileset>
			<fileset dir="lib">
				<include name="Tinkerforge.jar" />
			</fileset>
		</jar>
	</target>

	<target name="deploy-module" depends="build-module">
		<copy file="${package.jar}" toDir="${pipes.packages}"/>
	</target>

</project>